<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_theme_primary"
    tools:context=".view.activity.profile.selfassessmentresult.SelfAssessmentResultActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp">

            <TextView
                android:id="@+id/tvDesc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Here is the result of your self-assessment"
                android:textColor="@color/text_color_light_primary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:justificationMode="inter_word"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/assessmentResultCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDesc1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:textAlignment="center"
                        android:text="Assessment Result"
                        android:textColor="@color/text_color_light_primary"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="12sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <LinearLayout
                                android:id="@+id/llDailySugarIntakeRecommendation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Daily Sugar Intake Recommendation"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"/>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="#00f900"
                                    android:layout_marginEnd="20dp"
                                    app:cardCornerRadius="50dp">

                                    <TextView
                                        android:id="@+id/tvAssessmentResult"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textAlignment="center"
                                        android:layout_marginHorizontal="6dp"
                                        android:text="50 Gram"
                                        android:textColor="@color/text_color_light_primary"
                                        android:fontFamily="@font/poppins_regular"
                                        android:textSize="12sp"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llAssessmentDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Assessment Date"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tvAssessmentDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="2022-01-01"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <TextView
                android:id="@+id/tvDesc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="The Sugar intake Recomendation we calculated based on the answers you provided in the self-assessment previously."
                android:textColor="@color/text_color_light_primary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:justificationMode="inter_word"
                app:layout_constraintTop_toBottomOf="@id/assessmentResultCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/personalInformationCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvDesc2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/healthConditionCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:textAlignment="center"
                        android:text="Personal Information"
                        android:textColor="@color/text_color_light_primary"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="12sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <LinearLayout
                                android:id="@+id/llName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginVertical="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Name"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="Alfan"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llDateOfBirth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Date of Birth"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tvDateOfBirth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="1998-01-01"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llGender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Gender"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tvGender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="Male"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llWeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Weight"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tvWeight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="60"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llHeight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Height"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tvHeight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="170"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/healthConditionCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/personalInformationCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/lifeStyleCardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:textAlignment="center"
                        android:text="Health Condition"
                        android:textColor="@color/text_color_light_primary"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="12sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <LinearLayout
                                android:id="@+id/llHistoryOfDiabetes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="History of Diabetes"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tvHistoryOfDiabetes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="Yes"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llfamilyHistoryOfDiabetes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Family History of Diabetes"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tvFamilyHistoryOfDiabetes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:text="Yes"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/lifeStyleCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/healthConditionCardView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:textAlignment="center"
                        android:text="Life Style"
                        android:textColor="@color/text_color_light_primary"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:textSize="12sp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingVertical="10dp">

                            <LinearLayout
                                android:id="@+id/llSweetConsumption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Sweet foods or drinks frequency per week"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvSweetConsumption"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:text="3-4 kali seminggu"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/llDailySugarConsumption"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Daily sugar consumption"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvDailySugarConsumption"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:text="1-2 sendok teh (sekitar 4-8 g gula)"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llExerciseFrequency"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Exercise frequency per week"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvExerciseFrequency"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:text="5-6 kali seminggu"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llFoodPreferences"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Food Preference"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvFoodPreferences"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:text="Vegan, Paleo, High Fiber, Alcohol Free"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llFoodAllergiesOrIntolerances"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Food Allergies or Intolerances"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvFoodAllergiesOrIntolerances"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:text="Yes"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llFavoriteFoodsOrIngredients"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:text="Favorite Foods or Ingredients"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvFavoriteFoodsOrIngredients"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="20dp"
                                    android:text="Nasi Goreng, Ayam Goreng, Sambal"
                                    android:textColor="@color/text_color_light_primary"
                                    android:fontFamily="@font/poppins_regular"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llDislikedFoodsOrIngredients"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="5dp"
