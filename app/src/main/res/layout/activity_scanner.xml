<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_theme_primary"
    tools:context=".view.activity.scanner.ScannerActivity">

    <include
        android:id="@+id/actionBar"
        layout="@layout/action_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Preview Image -->
    <include
        android:id="@+id/previewImageCard"
        layout="@layout/scanner_image_preview_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/actionBar"/>

    <!-- Instruction -->
    <TextView
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/tips"
        android:textSize="15sp"
        android:textColor="@color/text_color_light_primary"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@+id/previewImageCard"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/tip1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_1"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/tip1"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tip1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_2"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/tip2"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tip2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_3"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/tip3"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tip3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_4"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/tip4"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tip4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_5"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/tip5"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tip5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_6"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/tip6"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tip6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_7"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/tip7"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tip7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_8"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/tip8"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tip8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_9"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:justificationMode="inter_word"
                android:text="@string/tip9"
                android:textSize="12sp"
                android:textColor="@color/text_color_light_secondary"
                android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <!-- Analyze Button -->
    <Button
        android:id="@+id/analyzeButton"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/black"
        android:text="@string/analyzeButton"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/cameraButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/black"
        android:drawableBottom="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/analyzeButton"/>

    <Button
        android:id="@+id/galleryButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/black"
        android:drawableBottom="@drawable/ic_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cameraButton"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
